{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "module": "esnext",
    "paths": {
      "types": ["src/types"],
      "@services": ["src/services"],
      "@state": ["src/state"],
      "@components": ["src/components"],
      "@constants": ["src/constants"],
      "@utils": ["src/utils"],
      "@screens": ["src/screens"],
      "@navigation": ["src/navigation"],
      "@assets": ["src/assets"],
      "@hooks": ["src/hooks"]
    }
  }
}
